---
const { item } = Astro.props;
const primaryImage = item.images?.[0] || '/images/placeholder.svg';
---
<a 
  href={`/item/${item.id}`} 
  class="group relative block rounded-2xl overflow-hidden bg-gray-900/50 shadow-lg shadow-black/20 hover:shadow-xl hover:shadow-black/30 hover:-translate-y-1 transition-all duration-300 ease-out"
>
  <div class="aspect-[4/3] overflow-hidden">
    <img 
      src={primaryImage} 
      alt={item.name} 
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500 ease-out" 
      loading="lazy" 
    />
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 p-5">
    <h3 class="text-white font-medium text-base leading-snug mb-2 text-shadow">{item.name}</h3>
    <div class="flex items-baseline gap-2">
      {item.salePrice ? (
        <>
          <span class="text-gray-400 text-sm line-through">{item.originalPrice} CZK</span>
          <span class="text-blue-400 font-semibold">{item.salePrice} CZK</span>
        </>
      ) : item.originalPrice ? (
        <span class="text-blue-400 font-semibold">{item.originalPrice} CZK</span>
      ) : (
        <span class="text-blue-400 font-semibold">Make offer</span>
      )}
    </div>
  </div>
</a>
