---
import items from '../../lib/items.ts';

export function getStaticPaths() {
  return items.map(item => ({
    params: { id: item.id },
  }));
}

const { id } = Astro.params;
const item = items.find(i => i.id === id);
if (!item) throw new Error('Item not found');
---
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{item.name} â€“ Moving Sale</title>
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        const theme = saved || 'light';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    <style is:global>
      :root {
        --bg: #0B1220;
        --bg-secondary: #111827;
        --card-bg: #0F172A;
        --card-border: rgba(255,255,255,0.06);
        --text-primary: #FFFFFF;
        --text-secondary: #A1A1AA;
        --text-muted: #71717A;
        --accent: #60A5FA;
        --old-price: rgba(255,255,255,0.35);
        --shadow: rgba(0,0,0,0.35);
      }
      
      [data-theme="light"] {
        --bg: #F6F8FB;
        --bg-secondary: #FFFFFF;
        --card-bg: #FFFFFF;
        --card-border: #E6EAF0;
        --text-primary: #0F172A;
        --text-secondary: #64748B;
        --text-muted: #94A3B8;
        --accent: #2563EB;
        --old-price: #94A3B8;
        --shadow: rgba(15,23,42,0.08);
      }
      
      [data-theme="dark"] body {
        background: radial-gradient(circle at 20% 0%, var(--bg-secondary) 0%, var(--bg) 40%, #070c16 100%);
      }
      
      [data-theme="light"] body {
        background: var(--bg);
      }
      
      body {
        min-height: 100vh;
        color: var(--text-primary);
      }
      
      img {
        image-rendering: auto;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        transform: translateZ(0);
      }
    </style>
  </head>
  <body class="min-h-screen">
    <main class="max-w-4xl mx-auto px-6 py-10">
      <a href="/" class="back-link inline-flex items-center gap-2 transition-colors mb-8">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Back to listings
      </a>
      
      <div class="grid lg:grid-cols-2 gap-10">
        <!-- Image gallery -->
        <div class="space-y-4">
          {item.images?.length > 0 ? (
            <>
              <div class="image-container rounded-2xl overflow-hidden cursor-zoom-in h-[500px] flex items-center justify-center" onclick="openModal(this.querySelector('img').src)">
                <img id="mainImage" src={item.images[0]} alt={item.name} class="max-w-full max-h-full object-contain transition-opacity duration-200" />
              </div>
              {item.images.length > 1 && (
                <div class="grid grid-cols-4 gap-3">
                  {item.images.map((img, idx) => (
                    <div 
                      class="thumb-container rounded-xl overflow-hidden cursor-zoom-in" 
                      onclick={`openModal('${img}')`}
                      onmouseenter={`swapMainImage('${img}')`}
                    >
                      <img src={img} alt={`${item.name} - image ${idx + 1}`} class="w-full aspect-square object-cover hover:opacity-80 transition-opacity" loading="lazy" />
                    </div>
                  ))}
                </div>
              )}
            </>
          ) : (
            <div class="image-container w-full aspect-square rounded-2xl flex items-center justify-center" style="color: var(--text-muted)">
              No images
            </div>
          )}
        </div>
        
        <!-- Item details -->
        <div class="space-y-6">
          <h1 class="text-3xl font-light" style="color: var(--text-primary)">{item.name}</h1>
          
          <div class="flex items-baseline gap-3">
            {item.salePrice ? (
              <>
                <span class="text-xl line-through" style="color: var(--old-price)">{item.originalPrice} CZK</span>
                <span class="text-3xl font-semibold" style="color: var(--accent)">{item.salePrice} CZK</span>
              </>
            ) : item.originalPrice ? (
              <span class="text-3xl font-semibold" style="color: var(--accent)">{item.originalPrice} CZK</span>
            ) : (
              <span class="text-3xl font-semibold" style="color: var(--accent)">Make offer</span>
            )}
          </div>
          
          <div class="pt-6 border-t" style="border-color: var(--card-border)">
            <p style="color: var(--text-secondary)">
              Contact for pickup details and availability.
            </p>
          </div>
        </div>
      </div>
    </main>

    <!-- Image Modal -->
    <div id="imageModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 backdrop-blur-sm" onclick="closeModal(event)">
      <button onclick="closeModal(event)" class="absolute top-4 right-4 text-white/70 hover:text-white transition-colors z-10" aria-label="Close modal">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <img id="modalImage" src="" alt="Full size image" class="max-w-[90vw] max-h-[90vh] object-contain rounded-lg shadow-2xl" onclick="event.stopPropagation()" />
    </div>

    <script is:inline>
      function swapMainImage(src) {
        const mainImg = document.getElementById('mainImage');
        if (mainImg && mainImg.src !== src) {
          mainImg.style.opacity = '0.5';
          const img = new Image();
          img.onload = () => {
            mainImg.src = src;
            mainImg.style.opacity = '1';
          };
          img.src = src;
        }
      }

      function openModal(src) {
        const modal = document.getElementById('imageModal');
        const img = document.getElementById('modalImage');
        img.src = src;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
      }

      function closeModal(event) {
        if (event) event.stopPropagation();
        const modal = document.getElementById('imageModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
      }

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
      });
    </script>
    
    <style>
      .back-link {
        color: var(--text-secondary);
      }
      .back-link:hover {
        color: var(--text-primary);
      }
      .image-container {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
      }
      .thumb-container {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
      }
    </style>
  </body>
</html>
